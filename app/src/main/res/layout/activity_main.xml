<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:textColor="#0F0F0F"
        android:textSize="22sp"
        android:padding="10dp"
        android:background="@drawable/textview_border"
        android:id="@+id/result"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_plus"
                android:text="+"
                android:textSize="20sp"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_default_operators"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button1"
                android:text="1"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button2"
                android:text="2"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:text="3"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_minus"
                android:text="-"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_default_operators"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button4"
                android:text="4"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button5"
                android:text="5"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:text="6"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_mul"
                android:textColor="#ffffff"
                android:background="@drawable/button_default_operators"
                android:text="*"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button7"
                android:text="7"
                android:textSize="20sp"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button8"
                android:text="8"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:text="9"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_div"
                android:text="/"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_default_operators"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

           <!-- <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_mod"
                android:text="%"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/> -->

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button0"
                android:text="0"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textSize="20sp"
                android:bottomRightRadius="30dp"
                android:bottomLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:textAlignment="center"
                android:layout_weight="18"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_eq"
                android:text="="
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_equals"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/clear"
                android:text="C"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_clear"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/left_br"
                android:text="("
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/right_br"
                android:text=")"
                android:layout_margin="1dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_style_operands"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Backspace"
                android:text="\u232b"
                android:layout_margin="1dp"
                android:textColor="#ffffff"
                android:background="@drawable/button_backspace"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
